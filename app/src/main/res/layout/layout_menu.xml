<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_smallest"
        android:layout_marginEnd="@dimen/margin_regular"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:contentPaddingBottom="8dp"
        app:contentPaddingTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMenuStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/view_background_selector"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="@dimen/margin_regular"
                android:paddingTop="@dimen/margin_regular"
                android:paddingEnd="@dimen/margin_regular"
                android:paddingBottom="@dimen/margin_regular"
                android:text="@string/sort_by_stars"
                android:textColor="@color/text_color_regular"
                android:textSize="@dimen/text_size_regular" />

            <TextView
                android:id="@+id/tvMenuName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/view_background_selector"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="@dimen/margin_regular"
                android:paddingTop="@dimen/margin_regular"
                android:paddingEnd="@dimen/margin_regular"
                android:paddingBottom="@dimen/margin_regular"
                android:text="@string/sort_by_name"
                android:textColor="@color/text_color_regular"
                android:textSize="@dimen/text_size_regular" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>